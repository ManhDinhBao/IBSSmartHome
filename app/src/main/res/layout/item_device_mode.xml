<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.card.MaterialCardView
        android:id="@+id/cardview_devicemode"
        android:layout_width="@dimen/size_all_itemsize"
        android:layout_height="@dimen/size_all_itemsize"
        app:cardCornerRadius="@dimen/size_all_cardradius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_devicemode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:text="FAN"
                android:textSize="@dimen/textsize_all_title"
                android:textColor="@color/lv7Color"
                android:textStyle="bold" />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>