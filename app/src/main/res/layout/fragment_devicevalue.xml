<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lv2Color"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:background="@drawable/devicevalue_background"
        android:layout_width="64dp"
        android:layout_marginTop="@dimen/margin_all_default"
        android:layout_centerHorizontal="true"
        android:layout_height="64dp">
        <TextView
            android:id="@+id/textview_devicevalue"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/textsize_all_title"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <abak.tr.com.boxedverticalseekbar.BoxedVertical
        android:id="@+id/boxedvertical_devicevalue"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="@dimen/margin_all_double_default"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:backgroundColor="@color/color_background"
        app:progressColor="@color/whiteColor"
        app:libCornerRadius="100"
        app:defaultValue="40"
        app:touchDisabled="true" />
</RelativeLayout>