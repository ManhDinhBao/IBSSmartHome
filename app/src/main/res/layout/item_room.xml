<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardItemRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/elevation_room_roomitem">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgCardRoomBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="imgTransition" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtCardRoomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_marginLeft="@dimen/margin_all_default"
                android:layout_marginTop="@dimen/margin_all_default"
                android:fontFamily="@font/reality_sunday_light"
                android:padding="@dimen/padding_all_default"
                android:shadowColor="#808080"
                android:shadowRadius="@integer/textshadow_home_roomtitle"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/textsize_home_roomtitle"
                android:textStyle="bold"
                android:transitionName="txtTransition" />
        </RelativeLayout>

    </FrameLayout>

</com.google.android.material.card.MaterialCardView>